-- ============================
-- ClickOn ‚Äì Envoi iMessage/SMS CSV (Universal)
-- Version 2: Mobile > Work > Home phone priority
-- ============================

-- MODE TEST
set modeTest to false
set numeroTest to "+14389266456"

-- Demander le fichier CSV
set csvFile to choose file with prompt "S√©lectionne le fichier CSV de la campagne :" of type {"public.comma-separated-values-text", "public.text"}

-- Lire le CSV en texte UTF-8
set csvText to read csvFile as ¬´class utf8¬ª
set csvLines to paragraphs of csvText

if (count of csvLines) < 2 then
	display dialog "Le fichier CSV semble vide ou incomplet (en-t√™te uniquement)." buttons {"OK"} default button 1
	return
end if

-- ============================
--   ANALYSE DES COLONNES
-- ============================

set headerLine to item 1 of csvLines
set headers to my parseCSVLine(headerLine)

-- Nettoyer les en-t√™tes
set cleanedHeaders to {}
repeat with h in headers
	set end of cleanedHeaders to my trimText(h)
end repeat

-- D√©tecter les colonnes importantes
set firstNameCol to my findColumn(cleanedHeaders, {"first name", "firstname", "first", "pr√©nom", "prenom", "given name"})
set lastNameCol to my findColumn(cleanedHeaders, {"last name", "lastname", "last", "nom", "surname", "family name"})

-- Colonnes t√©l√©phone par priorit√© (Mobile > Work > Home > Generic)
set mobileCol to my findColumn(cleanedHeaders, {"mobile", "cell", "cellulaire", "cellular", "cell_phone", "mobile_phone"})
set workCol to my findColumn(cleanedHeaders, {"work", "travail", "bureau", "office", "work_phone", "business", "professionnel"})
set homeCol to my findColumn(cleanedHeaders, {"home", "maison", "domicile", "residence", "home_phone", "personnel"})
set phoneCol to my findColumn(cleanedHeaders, {"phone", "telephone", "tel", "t√©l√©phone", "num√©ro", "numero", "phone number"})

-- V√©rifier qu'on a trouv√© les colonnes n√©cessaires
set hasAnyPhone to (mobileCol > 0) or (workCol > 0) or (homeCol > 0) or (phoneCol > 0)

if firstNameCol is 0 or not hasAnyPhone then
	set missingCols to ""
	if firstNameCol is 0 then set missingCols to missingCols & "‚Ä¢ Pr√©nom (first name)
"
	if not hasAnyPhone then set missingCols to missingCols & "‚Ä¢ T√©l√©phone (mobile/work/home/phone)
"
	
	display dialog "Colonnes manquantes d√©tect√©es :
" & missingCols & "
Colonnes trouv√©es dans ton CSV :
" & my joinList(cleanedHeaders, ", ") buttons {"OK"} default button 1
	return
end if

-- Afficher les colonnes d√©tect√©es
set detectionMsg to "Colonnes d√©tect√©es :
‚Ä¢ Pr√©nom : colonne " & firstNameCol & " (" & item firstNameCol of cleanedHeaders & ")
"
if lastNameCol is not 0 then
	set detectionMsg to detectionMsg & "‚Ä¢ Nom : colonne " & lastNameCol & " (" & item lastNameCol of cleanedHeaders & ")
"
else
	set detectionMsg to detectionMsg & "‚Ä¢ Nom : non trouv√© (optionnel)
"
end if

set detectionMsg to detectionMsg & "
üì± T√©l√©phones (priorit√©: Mobile > Work > Home > Generic) :
"
if mobileCol > 0 then
	set detectionMsg to detectionMsg & "  ‚úì Mobile : colonne " & mobileCol & " (" & item mobileCol of cleanedHeaders & ")
"
end if
if workCol > 0 then
	set detectionMsg to detectionMsg & "  ‚úì Work : colonne " & workCol & " (" & item workCol of cleanedHeaders & ")
"
end if
if homeCol > 0 then
	set detectionMsg to detectionMsg & "  ‚úì Home : colonne " & homeCol & " (" & item homeCol of cleanedHeaders & ")
"
end if
if phoneCol > 0 then
	set detectionMsg to detectionMsg & "  ‚úì Phone : colonne " & phoneCol & " (" & item phoneCol of cleanedHeaders & ")
"
end if

display dialog detectionMsg buttons {"Continuer"} default button 1

-- Demander le texte du message
set messageInput to my getMultilineMessage()

-- ============================
--   PR√â-ANALYSE DES CONTACTS
-- ============================

set validContacts to {}
set invalidContacts to {}
set mobileCount to 0
set workCount to 0
set homeCount to 0
set genericCount to 0

repeat with i from 2 to count of csvLines
	set lineText to item i of csvLines
	set lineNum to i
	
	if lineText is not "" then
		set fields to my parseCSVLine(lineText)
		set maxCol to my maxOf({firstNameCol, lastNameCol, mobileCol, workCol, homeCol, phoneCol})
		
		if (count of fields) ‚â• maxCol then
			-- Extraire pr√©nom et nom
			set firstName to my trimText(item firstNameCol of fields)
			if lastNameCol is not 0 then
				set lastName to my trimText(item lastNameCol of fields)
			else
				set lastName to ""
			end if
			
			-- Extraire tous les t√©l√©phones disponibles
			set phoneMobile to ""
			set phoneWork to ""
			set phoneHome to ""
			set phoneGeneric to ""
			
			if mobileCol > 0 and mobileCol ‚â§ (count of fields) then set phoneMobile to my trimText(item mobileCol of fields)
			if workCol > 0 and workCol ‚â§ (count of fields) then set phoneWork to my trimText(item workCol of fields)
			if homeCol > 0 and homeCol ‚â§ (count of fields) then set phoneHome to my trimText(item homeCol of fields)
			if phoneCol > 0 and phoneCol ‚â§ (count of fields) then set phoneGeneric to my trimText(item phoneCol of fields)
			
			-- S√©lectionner le meilleur t√©l√©phone par priorit√©
			set formattedPhone to ""
			set phoneSource to ""
			
			set testPhone to my formatPhoneNumber(phoneMobile)
			if testPhone is not "" then
				set formattedPhone to testPhone
				set phoneSource to "mobile"
			end if
			
			if formattedPhone is "" then
				set testPhone to my formatPhoneNumber(phoneWork)
				if testPhone is not "" then
					set formattedPhone to testPhone
					set phoneSource to "work"
				end if
			end if
			
			if formattedPhone is "" then
				set testPhone to my formatPhoneNumber(phoneHome)
				if testPhone is not "" then
					set formattedPhone to testPhone
					set phoneSource to "home"
				end if
			end if
			
			if formattedPhone is "" then
				set testPhone to my formatPhoneNumber(phoneGeneric)
				if testPhone is not "" then
					set formattedPhone to testPhone
					set phoneSource to "phone"
				end if
			end if
			
			-- Classer le contact
			if firstName is "" then
				set end of invalidContacts to {lineNum:lineNum, firstName:firstName, lastName:lastName, reason:"Pr√©nom vide"}
			else if formattedPhone is "" then
				set end of invalidContacts to {lineNum:lineNum, firstName:firstName, lastName:lastName, reason:"Aucun t√©l√©phone valide"}
			else
				set end of validContacts to {lineNum:lineNum, firstName:firstName, lastName:lastName, phone:formattedPhone, phoneSource:phoneSource}
				if phoneSource is "mobile" then
					set mobileCount to mobileCount + 1
				else if phoneSource is "work" then
					set workCount to workCount + 1
				else if phoneSource is "home" then
					set homeCount to homeCount + 1
				else
					set genericCount to genericCount + 1
				end if
			end if
		else
			set end of invalidContacts to {lineNum:lineNum, firstName:"", lastName:"", reason:"Pas assez de colonnes"}
		end if
	end if
end repeat

-- ============================
--   √âCRAN DE PR√âVISUALISATION
-- ============================

set previewMsg to "üìã R√âSUM√â AVANT ENVOI
‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê

‚úÖ Contacts valides : " & (count of validContacts) & "
‚ùå Contacts ignor√©s : " & (count of invalidContacts) & "

üì± Sources t√©l√©phone :
   ‚Ä¢ Mobile : " & mobileCount & "
   ‚Ä¢ Work : " & workCount & "
   ‚Ä¢ Home : " & homeCount & "
   ‚Ä¢ Generic : " & genericCount & "
"

-- Afficher les premiers contacts valides
if (count of validContacts) > 0 then
	set previewMsg to previewMsg & "
‚îÄ‚îÄ Premiers contacts ‚îÄ‚îÄ
"
	set previewCount to count of validContacts
	if previewCount > 5 then set previewCount to 5
	
	repeat with j from 1 to previewCount
		set c to item j of validContacts
		set previewMsg to previewMsg & "  " & j & ". " & (firstName of c) & " " & (lastName of c) & " ‚Üí " & (phone of c) & " (" & (phoneSource of c) & ")
"
	end repeat
end if

-- Afficher les contacts invalides
if (count of invalidContacts) > 0 then
	set previewMsg to previewMsg & "
‚îÄ‚îÄ Contacts ignor√©s ‚îÄ‚îÄ
"
	set invalidPreviewCount to count of invalidContacts
	if invalidPreviewCount > 10 then set invalidPreviewCount to 10
	
	repeat with j from 1 to invalidPreviewCount
		set c to item j of invalidContacts
		set contactName to (firstName of c)
		if contactName is "" then set contactName to "(vide)"
		set previewMsg to previewMsg & "  ‚ö†Ô∏è Ligne " & (lineNum of c) & " : " & contactName & " ‚Äî " & (reason of c) & "
"
	end repeat
	
	if (count of invalidContacts) > 10 then
		set previewMsg to previewMsg & "  ... et " & ((count of invalidContacts) - 10) & " autres
"
	end if
end if

-- Bouton pour continuer ou annuler
if (count of validContacts) is 0 then
	display dialog previewMsg buttons {"Fermer"} default button 1 with title "Aucun contact valide"
	return
end if

set userChoice to button returned of (display dialog previewMsg buttons {"Annuler", "üöÄ Envoyer " & (count of validContacts) & " messages"} default button 2 with title "Confirmation")

if userChoice is "Annuler" then
	return
end if

-- ============================
--   Boucle d'envoi
-- ============================

set successCount to 0
set skipCount to 0
set skippedLines to {}

repeat with contactRecord in validContacts
	set firstName to firstName of contactRecord
	set lastName to lastName of contactRecord
	set formattedPhone to phone of contactRecord
	set phoneSource to phoneSource of contactRecord
	set lineNum to lineNum of contactRecord
	
	-- Tronquer pour l'affichage
	set displayLine to firstName & " " & lastName & " (" & formattedPhone & ")"
	
	-- Nettoyer le pr√©nom et nom des caract√®res sp√©ciaux
	set cleanFirstName to my cleanName(firstName)
	set cleanLastName to my cleanName(lastName)
	
	-- Remplacer **PRENOM** dans le message
	set AppleScript's text item delimiters to "**PRENOM**"
	set tmpList to text items of messageInput
	set AppleScript's text item delimiters to cleanFirstName
	set messageText to tmpList as text
	set AppleScript's text item delimiters to ""
	
	-- Remplacer **NOM** dans le message
	set AppleScript's text item delimiters to "**NOM**"
	set tmpList to text items of messageText
	set AppleScript's text item delimiters to cleanLastName
	set messageText to tmpList as text
	set AppleScript's text item delimiters to ""
	
	-- Choisir destinataire
	if modeTest then
		set numeroEnvoi to numeroTest
	else
		set numeroEnvoi to formattedPhone
	end if
	
	-- Envoyer
	set sendResult to my sendiMessage(numeroEnvoi, messageText)
	if sendResult then
		set successCount to successCount + 1
	else
		set skipCount to skipCount + 1
		set end of skippedLines to "‚ùå Ligne " & lineNum & " ‚Äî √âchec d'envoi (" & phoneSource & ")
   ‚Üí " & displayLine
	end if
	delay 1
end repeat

-- Construire le message de r√©sum√©
set summaryMsg to "Campagne termin√©e ‚úîÔ∏é

‚úÖ Envoy√©s : " & successCount & "
‚ùå Ignor√©s : " & skipCount

if (count of skippedLines) > 0 then
	set summaryMsg to summaryMsg & "

--- Lignes ignor√©es ---
"
	repeat with skipInfo in skippedLines
		set summaryMsg to summaryMsg & skipInfo & "
"
	end repeat
end if

-- Afficher le dialogue au premier plan
tell application "System Events"
	activate
end tell
delay 0.2
display dialog summaryMsg buttons {"OK"} default button 1 with title "R√©sultat de la campagne"


-- ============================
--   Handlers
-- ============================

-- Fonction pour obtenir un message multi-lignes
on getMultilineMessage()
	set defaultMsg to "Bonjour **PRENOM**,\\n\\nJ'aimerais te poser une question rapide...\\n\\nMerci!"
	
	set theMessage to text returned of (display dialog "Tape ton message.

Variables disponibles :
‚Ä¢ **PRENOM** ‚Üí pr√©nom du client
‚Ä¢ **NOM** ‚Üí nom du client

Pour faire un retour √† la ligne, tape \\n
Exemple : Ligne 1\\nLigne 2\\nLigne 3

Ton message :" default answer defaultMsg)
	
	-- Remplacer \\n par de vrais retours √† la ligne
	set AppleScript's text item delimiters to "\\n"
	set msgParts to text items of theMessage
	set AppleScript's text item delimiters to linefeed
	set theMessage to msgParts as text
	set AppleScript's text item delimiters to ""
	
	return theMessage
end getMultilineMessage

-- Fonction pour nettoyer les noms/pr√©noms des caract√®res probl√©matiques
on cleanName(theName)
	if theName is "" then return ""
	
	-- Caract√®res √† supprimer compl√®tement
	set badChars to {",", ";", "\"", "'", "`", "(", ")", "[", "]", "{", "}", "<", ">", "|", "\\", "/", "*", "?", ":", "!", "@", "#", "$", "%", "^", "&", "=", "+", "~"}
	
	set cleanedName to theName
	
	repeat with badChar in badChars
		set AppleScript's text item delimiters to badChar
		set nameParts to text items of cleanedName
		set AppleScript's text item delimiters to ""
		set cleanedName to nameParts as text
	end repeat
	
	-- Nettoyer les espaces multiples
	set AppleScript's text item delimiters to "  "
	repeat while cleanedName contains "  "
		set nameParts to text items of cleanedName
		set AppleScript's text item delimiters to " "
		set cleanedName to nameParts as text
		set AppleScript's text item delimiters to "  "
	end repeat
	set AppleScript's text item delimiters to ""
	
	-- Trim d√©but et fin
	set cleanedName to my trimText(cleanedName)
	
	return cleanedName
end cleanName

on sendiMessage(phoneNumber, messageText)
	-- Envoyer via SMS par d√©faut - Messages basculera automatiquement vers iMessage si le destinataire l'a
	-- C'est la m√©thode la plus fiable car SMS fonctionne pour TOUT LE MONDE
	
	-- Essai 1: Service "SMS" direct
	try
		tell application "Messages"
			send messageText to buddy phoneNumber of service "SMS"
		end tell
		return true
	on error errMsg1
		-- Essai 2: Premier service SMS trouv√©
		try
			tell application "Messages"
				set smsService to first service whose service type is SMS
				send messageText to buddy phoneNumber of smsService
			end tell
			return true
		on error errMsg2
			-- Essai 3: Chercher le service par nom (iPhone)
			try
				tell application "Messages"
					set allServices to every service
					repeat with s in allServices
						try
							if service type of s is SMS then
								send messageText to buddy phoneNumber of s
								return true
							end if
						end try
					end repeat
				end tell
			on error errMsg3
				-- Rien ne marche
			end try
			
			display dialog "Erreur d'envoi SMS √† " & phoneNumber & "

V√©rifie que 'Transfert de SMS' est activ√© sur ton iPhone:
R√©glages ‚Üí Messages ‚Üí Transfert de SMS ‚Üí Active ton Mac

Erreur: " & errMsg2 buttons {"Continuer", "Arr√™ter"} default button 1
			if button returned of result is "Arr√™ter" then error number -128
			return false
		end try
	end try
end sendiMessage

on handleSMSFallback()
	-- Cette fonction v√©rifie s'il y a une alerte de fallback SMS et clique automatiquement
	try
		tell application "System Events"
			tell process "Messages"
				-- Chercher les boutons dans les fen√™tres/alertes
				set allWindows to every window
				repeat with w in allWindows
					try
						-- Chercher un bouton "Send as SMS" ou "Envoyer par SMS" ou "Try to Send Again"
						set allButtons to every button of w
						repeat with btn in allButtons
							set btnName to name of btn
							if btnName contains "Send as SMS" or btnName contains "Envoyer par SMS" or btnName contains "Send as Text Message" or btnName contains "Envoyer par message texte" or btnName contains "Try" or btnName contains "R√©essayer" then
								click btn
								delay 0.3
								return true
							end if
						end repeat
					end try
					
					-- Chercher dans les sheets (dialogues modaux)
					try
						set allSheets to every sheet of w
						repeat with s in allSheets
							set sheetButtons to every button of s
							repeat with btn in sheetButtons
								set btnName to name of btn
								if btnName contains "Send as SMS" or btnName contains "Envoyer par SMS" or btnName contains "Send as Text Message" or btnName contains "Envoyer par message texte" or btnName contains "Try" or btnName contains "R√©essayer" then
									click btn
									delay 0.3
									return true
								end if
							end repeat
						end repeat
					end try
				end repeat
				
				-- Chercher aussi dans les alertes syst√®me
				try
					set allAlerts to every window whose subrole is "AXDialog" or subrole is "AXAlert"
					repeat with a in allAlerts
						set alertButtons to every button of a
						repeat with btn in alertButtons
							set btnName to name of btn
							if btnName contains "Send as SMS" or btnName contains "Envoyer par SMS" or btnName contains "Send as Text Message" or btnName contains "Envoyer par message texte" or btnName contains "Try" or btnName contains "R√©essayer" then
								click btn
								delay 0.3
								return true
							end if
						end repeat
					end repeat
				end try
			end tell
		end tell
		return false
	on error
		return false
	end try
end handleSMSFallback


on formatPhoneNumber(rawPhone)
	-- Enlever tous les caract√®res non-num√©riques sauf le +
	set cleanPhone to ""
	set validChars to "0123456789+"
	
	repeat with c in rawPhone
		if validChars contains c then
			set cleanPhone to cleanPhone & c
		end if
	end repeat
	
	-- Si vide, retourner vide
	if cleanPhone is "" then return ""
	
	-- Si √ßa commence par +, on garde tel quel (si assez long)
	if cleanPhone starts with "+" then
		if (length of cleanPhone) ‚â• 11 then
			return cleanPhone
		else
			return ""
		end if
	end if
	
	-- Si √ßa commence par 1 et a 11 chiffres, ajouter +
	if (length of cleanPhone) is 11 and cleanPhone starts with "1" then
		return "+" & cleanPhone
	end if
	
	-- Si √ßa a 10 chiffres, ajouter +1
	if (length of cleanPhone) is 10 then
		return "+1" & cleanPhone
	end if
	
	-- Sinon, retourner vide (num√©ro invalide)
	return ""
end formatPhoneNumber


on findColumn(headerList, possibleNames)
	repeat with i from 1 to count of headerList
		set headerLower to my toLowerCase(item i of headerList)
		repeat with possibleName in possibleNames
			if headerLower contains possibleName then
				return i
			end if
		end repeat
	end repeat
	return 0
end findColumn


on toLowerCase(txt)
	set lowerChars to "abcdefghijklmnopqrstuvwxyz√†√¢√§√©√®√™√´√Ø√Æ√¥√π√ª√º√ø√ß"
	set upperChars to "ABCDEFGHIJKLMNOPQRSTUVWXYZ√Ä√Ç√Ñ√â√à√ä√ã√è√é√î√ô√õ√ú≈∏√á"
	set newText to ""
	
	repeat with c in txt
		set pos to offset of c in upperChars
		if pos > 0 then
			set newText to newText & character pos of lowerChars
		else
			set newText to newText & c
		end if
	end repeat
	
	return newText
end toLowerCase


on maxOf(numList)
	set maxNum to 0
	repeat with n in numList
		if n > maxNum then set maxNum to n
	end repeat
	return maxNum
end maxOf


on joinList(theList, delimiter)
	set oldDelims to AppleScript's text item delimiters
	set AppleScript's text item delimiters to delimiter
	set theString to theList as string
	set AppleScript's text item delimiters to oldDelims
	return theString
end joinList


on trimText(t)
	set theChars to {" ", tab, return, linefeed}
	set textItemDelimitersBackup to AppleScript's text item delimiters
	
	set AppleScript's text item delimiters to theChars
	set itemList to text items of t
	
	repeat while (count of itemList) > 0 and item 1 of itemList is ""
		if (count of itemList) > 1 then
			set itemList to items 2 thru -1 of itemList
		else
			set itemList to {}
		end if
	end repeat
	
	repeat while (count of itemList) > 0 and item -1 of itemList is ""
		if (count of itemList) > 1 then
			set itemList to items 1 thru -2 of itemList
		else
			set itemList to {}
		end if
	end repeat
	
	set AppleScript's text item delimiters to ""
	if (count of itemList) = 0 then
		set trimmed to ""
	else
		set trimmed to itemList as text
	end if
	set AppleScript's text item delimiters to textItemDelimitersBackup
	return trimmed
end trimText


-- Parser CSV robuste qui g√®re les virgules dans les guillemets
on parseCSVLine(csvLine)
	set fieldList to {}
	set currentField to ""
	set insideQuotes to false
	set i to 1
	set lineLength to length of csvLine
	
	repeat while i ‚â§ lineLength
		set currentChar to character i of csvLine
		
		if currentChar is "\"" then
			-- V√©rifier si c'est un guillemet √©chapp√© ("")
			if i < lineLength and character (i + 1) of csvLine is "\"" then
				-- Guillemet √©chapp√©, ajouter un seul guillemet
				set currentField to currentField & "\""
				set i to i + 1
			else
				-- Basculer l'√©tat insideQuotes
				set insideQuotes to not insideQuotes
			end if
		else if currentChar is "," and not insideQuotes then
			-- Fin du champ
			set end of fieldList to currentField
			set currentField to ""
		else
			-- Caract√®re normal, ajouter au champ
			set currentField to currentField & currentChar
		end if
		
		set i to i + 1
	end repeat
	
	-- Ajouter le dernier champ
	set end of fieldList to currentField
	
	return fieldList
end parseCSVLine
